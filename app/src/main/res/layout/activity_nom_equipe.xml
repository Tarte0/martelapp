<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:weightSum="10"
    tools:context="martelapp.test.Activity.NomEquipeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_weight="2.5"
        android:weightSum="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/editTextTeamName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="top|left"
            android:ems="10"
            android:maxLength="18"
            android:hint="@string/hint_nom_equipe"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textSize="35sp"
            android:textColor="@color/colorPrimary"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="80sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="4sp"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <Button
            android:id="@+id/buttonStart"
            style="@style/button_vert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|right"
            android:layout_weight="2"
            android:layout_marginRight="8dp"
            android:scaleType="fitEnd"
            android:text="@string/bouton_commencer"
            android:textSize="35sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="4sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_erreur_nom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/pdfGrey"
        android:textSize="25sp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="4sp"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"/>


</LinearLayout>
