<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >

    <TextView
        android:id="@+id/numero_arbre_martele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        tools:text="numero" android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/essence_arbre_martele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/numero_arbre_martele"
        tools:text="essence" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/numero_arbre_martele"/>

    <TextView
        android:id="@+id/diametre_arbre_martele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/essence_arbre_martele"
        tools:text="diametre" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/essence_arbre_martele"/>

</RelativeLayout>