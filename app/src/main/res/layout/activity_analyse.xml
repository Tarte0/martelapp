<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="martelapp.test.Activity.RechercheActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarAnalyse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabsAnalyse"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:minHeight="?attr/actionBarSize"
                app:tabBackground="@drawable/tab_color_selector"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="12">

                <ImageButton
                    android:id="@+id/previousAnalyse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:scaleX="-1"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/arrow" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpagerAnalyse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_above="@id/appbarAnalyse"
                    android:layout_weight="10" />

                <ImageButton
                    android:id="@+id/nextAnalyse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/arrow" />

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
