<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="martelapp.test.AfficherArbre">

    <GridLayout
        android:layout_width="576dp"
        android:layout_height="295dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/buttonMarteler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="10"
            android:text="Marteler" />

        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9">>
            <RadioButton android:id="@+id/arbreMur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arbre Mûr"/>
            <RadioButton android:id="@+id/Eclaircie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eclaircie au profit d'un arbre d'avenir"/>
            <RadioButton android:id="@+id/sanitaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanitaire"/>
            <RadioButton android:id="@+id/Régénération"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pour la Régénération"/>
            <RadioButton android:id="@+id/Exploitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pour l'Exploitation"/>
            <RadioButton android:id="@+id/Stabilité"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pour la stabilité"/>
        </RadioGroup>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:text="ToggleButton" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
